{
  "name": "claude-ui",
  "version": "0.3.1",
  "private": true,
  "type": "module",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "app:dist": "pnpm build && electron-builder",
    "app:dist:mac": "pnpm build && electron-builder --mac",
    "app:dist:mac:dir": "pnpm build && electron-builder --mac dir",
    "app:install": "pnpm app:dist:mac:dir && ./scripts/install-mac-app.sh",
    "typecheck": "tsc --noEmit",
    "format": "biome check --write .",
    "test": "vitest run"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.20",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.2",
    "fix-path": "^5.0.0",
    "lucide-react": "^0.525.0",
    "nano-spawn": "^2.0.0",
    "node-pty": "^1.2.0-beta.10",
    "radix-ui": "^1.4.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^22.15.29",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.7.0",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^3.2.4"
  }
}
